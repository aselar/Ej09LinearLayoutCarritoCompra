<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.asel.ej09linearlayoutcarritocompra.LinearLayoutActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <TextView
        android:text="@string/carrito"
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCarrito" />

    <TextView
        android:text="TextView"
        android:height="1dp"
        android:background="@color/colorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLinea1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <TextView
        android:text="TextView"
        android:height="1dp"
        android:background="@color/colorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLinea2"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <TextView
        android:text="TextView"
        android:height="1dp"
        android:background="@color/colorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLinea3" />

</LinearLayout>
